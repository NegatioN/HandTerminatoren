<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Map Card-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_map"
        android:layout_width="850dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fragment_frame_space"
        android:transitionName="leftTrans"
        card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:id="@+id/overlapMap"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout
                    android:id="@+id/fragment_map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                </FrameLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:elevation="@dimen/shadow_lv1"
                    android:padding="10dp"
                    card_view:cardUseCompatPadding="true">

                    <!-- Map header-->
                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_height="80dp"
                        android:background="@drawable/background_header">

                        <LinearLayout
                            android:id="@+id/map_head"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/map_head_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:alpha="1.0"
                                android:text="@string/placeholder"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/map_head_info"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@id/map_head"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:textSize="20sp">

                            <TextView
                                android:id="@+id/map_head_fields"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/field_distance"
                                android:textColor="@color/grey_dark" />

                            <TextView
                                android:id="@+id/map_head_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="@string/placeholder"
                                android:textColor="@color/grey_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="@string/time"
                                android:textColor="@color/grey_dark" />

                            <TextView
                                android:id="@+id/map_head_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:text="@string/placeholder"
                                android:textColor="@color/grey_dark" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/map_head_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/placeholder"
                                android:textColor="@color/grey_dark"
                                android:textSize="25sp" />

                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!--Ad-Hoc popup-->
                <include
                    android:id="@+id/layout_adhoc"
                    layout="@layout/dialog_adhoc"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>


    </android.support.v7.widget.CardView>

    <!-- The list which is "stuck" on this screen, on the right side -->
    <RelativeLayout
        android:id="@+id/rightside"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/card_map">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_task_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/fragment_frame_space"
            android:layout_marginBottom="@dimen/fragment_frame_space"
            android:layout_marginEnd="@dimen/fragment_frame_space"
            android:layout_marginStart="0dp"
            android:transitionName="midTrans"
            card_view:cardBackgroundColor="@color/backgroundWhite"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="4dp">

            <no.mesan.handterminator.view.TaskRecyclerView
                android:id="@+id/recyclerTaskList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </android.support.v7.widget.CardView>

        <no.mesan.handterminator.view.ProgressWheel
            android:id="@+id/progress_wheel_task"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:elevation="@dimen/shadow_lv2"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_camera_placeholder"
        android:layout_width="850dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fragment_frame_space"
        android:layout_marginLeft="@dimen/fragment_frame_space"
        android:layout_marginRight="-850dp"
        android:layout_marginTop="@dimen/fragment_frame_space"
        android:transitionName="rightTrans"
        card_view:cardBackgroundColor="@color/backgroundWhite"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/img_camera_bg_1" />
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/deliverButton"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/add_button_margin"
        android:layout_marginEnd="@dimen/add_button_margin"
        android:background="@drawable/ripple_oval"
        android:elevation="@dimen/shadow_lv2"
        android:src="@drawable/ic_check"
        android:tint="@color/white"
        android:transitionName="buttonTrans" />

</RelativeLayout>