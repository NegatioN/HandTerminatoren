<?xml version="1.0" encoding="utf-8"?>
<!--The layout-file for Toolbar used in package-fragments -->
<!-- minHeight = standardSize - 1dp to make room for divider-->
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/superWhite"
    android:minHeight="63dp"
    android:popupTheme="@style/ThemeOverlay.AppCompat"
    iosched:titleTextAppearance="@style/TitleStyle"
    iosched:navigationIcon="@drawable/ic_profile_tinted"
    android:clickable="true">
</android.support.v7.widget.Toolbar>