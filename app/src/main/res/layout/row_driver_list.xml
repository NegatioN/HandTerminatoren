<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:theme="@style/AppTheme"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/delivery_row_layout"
            android:background="@color/superWhite">

            <TextView
                android:id="@+id/driver_name"
                android:layout_marginStart="@dimen/marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:textSize="@dimen/list_size" />

            <TextView
                android:id="@+id/driver_distance"
                android:layout_marginStart="@dimen/marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/driver_name"
                android:paddingRight="25dp"
                android:textSize="@dimen/list_size" />

            <TextView
                android:id="@+id/driver_number"
                android:layout_marginStart="@dimen/marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/driver_name"
                android:layout_toLeftOf="@id/driver_distance"
                android:paddingRight="5dp"
                android:textSize="@dimen/list_size" />

            <!-- More fields -->

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>