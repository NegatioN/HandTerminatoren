<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.mesan.handterminator" >

    <!-- needed for google maps&directions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- needed for users gps location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- needed for sending sms -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.END_SMS" />
    <!-- needed for calling -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- needed for the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCmYICO0Zi0Mtv3FxuKpydsXBqvSd6NhLQ" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavDrawerActivity_"
            android:label="@string/title_activity_nav_drawer"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".ScanningActivity_"
            android:label="@string/title_activity_scanning"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".CardActivity_"
            android:label="@string/title_activity_test"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.Translucent" >
        </activity>
        <activity
            android:name=".DeviationActivity_"
            android:label="@string/title_activity_test"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.Translucent" >
        </activity>
        <activity
            android:name=".RouteListActivity_"
            android:label="@string/title_activity_route_list"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".DeliveryActivity_"
            android:label="@string/title_activity_delivery"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".UserProfileActivity_"
            android:label="@string/title_activity_user_profile"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.Translucent" >
        </activity>
        <activity
            android:name=".EmergencyActivity_"
            android:label="@string/title_activity_emergency"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.Translucent" >
        </activity>

        <service android:name=".service.SMSService" >
        </service>
        <service android:name=".service.PeriodicService" >
        </service>

        <receiver android:name=".service.SmsBroadcastReceiver" >
            <intent-filter>
                <action android:name="no.mesan.handterminator.mybroadcastreceiver" />
            </intent-filter>
        </receiver>

        <!-- Start Define Sugar ORM local Database -->
        <meta-data
            android:name="DATABASE"
            android:value="handterminator_local.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="no.mesan.handterminator.model.db" /> <!-- domain for our database-objects, helps with smoother table-creation -->
        <!-- End Define Sugar ORM local Database -->

    </application>

</manifest>
